clean :
	@$(RM) $(OBJS)

fclean : clean
	@$(RM) $(NAME) $(NAME_CHECKER)
	@echo "$(ROUGE)Fclean is running..."

bonus : $(NAME_CHECKER)

re : fclean all

.PHONY: all clean fclean re bonus
